{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "VAS_User_Schema",
    "comment": "Generated by https://jsonschema.net/home from sample patient record",
    "type": "object",
    "title": "User Schema",
    "description": "JSON Schema for User Object in the VistA Audit Solution",
    "default": {},
    "additionalProperties": true,
    "required": [
        "DUZ",
        "UID",
        "UserName",
        "Title"
    ],
    "properties": {
        "DUZ": {
            "$id": "#/properties/DUZ",
            "type": "integer",
            "description": "User DUZ",
            "examples": [
                4321
            ]
        },
        "UID": {
            "$id": "#/properties/UID",
            "type": ["integer", "string"],
            "description": "Globally unique User ID, if no ID then should be a null string, typically seen if user was a proxy",
            "default": "",
            "examples": [
                12345
            ]
        },
        "UserName": {
            "$id": "#/properties/UserName",
            "type": "string",
            "description": "User name (Last,First) all upper case",
            "default": "",
            "examples": [
                "ZZPENDERGRASS,DANIEL R"
            ]
        },
        "Title": {
            "$id": "#/properties/Title",
            "type": "string",
            "description": "The user job title",
            "default": "",
            "examples": [
                "Wizard"
            ]
        }
    }
}