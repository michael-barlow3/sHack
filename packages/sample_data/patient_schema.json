{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "VAS_Patient_Schema",
    "comment": "Generated by https://jsonschema.net/home from sample patient record",
    "type": "object",
    "title": "Patient Schema",
    "description": "JSON Schema for Patient Object in the VistA Audit Solution",
    "default": {},
    "additionalProperties": true,
    "required": [
        "DFN",
        "DOB",
        "INITPLUS4",
        "MVI",
        "PatientName",
        "SSN"
    ],
    "properties": {
        "DFN": {
            "$id": "#/properties/DFN",
            "type": "integer",
            "description": "Patient DFN",
            "examples": [
                9876543
            ]
        },
        "DOB": {
            "$id": "#/properties/DOB",
            "type": "integer",
            "description": "Patient Date Of Birth (YYYYMMDD)",
            "examples": [
                19540623
            ]
        },
        "INITPLUS4": {
            "$id": "#/properties/INITPLUS4",
            "type": "string",
            "description": "First Initial of Last Name plus Last 4 digits of Social",
            "examples": [
                "T1234"
            ]
        },
        "MVI": {
            "$id": "#/properties/MVI",
            "type": "string",
            "description": "Patient MVI/MPI/Master Patient ID",
            "examples": [
                "1234567890V987654"
            ]
        },
        "PatientName": {
            "$id": "#/properties/PatientName",
            "type": "string",
            "description": "Patient name (Last,First) all upper case",
            "examples": [
                "ZZLSMITH,ADRIANNA"
            ]
        },
        "SSN": {
            "$id": "#/properties/SSN",
            "type": "string",
            "description": "Patient Social (string because social CAN start with leading 0",
            "examples": [
                "123456789"
            ]
        }
    }
}
